<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:state_pressed="true">
		<shape>
			<gradient
				android:startColor="#268326"
				android:endColor="#229B22"
				android:angle="270" />
			<stroke
				android:width="2dp"
				android:color="#000000" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
		</shape>
	</item>

	<item
		android:state_focused="true">
		<shape>
			<gradient
				android:startColor="#268326"
				android:endColor="#229B22"
				android:angle="270" />
			<stroke
				android:width="2dp"
				android:color="#000000" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient
				android:startColor="#229B22"
				android:endColor="#268326"
				android:angle="270" />
			<stroke
				android:width="2dp"
				android:color="#268326" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
		</shape>
	</item>
</selector>